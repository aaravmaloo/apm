{
    "name": "hello_vault",
    "version": "1.0.0",
    "description": "A simple plugin to demonstrate APM plugin system",
    "author": "Aarav Maloo",
    "permissions": [
        "vault.read"
    ],
    "commands": {
        "greet": {
            "description": "Greet the user with a secret from the vault",
            "flags": {
                "user": {
                    "type": "string",
                    "default": "User"
                }
            },
            "steps": [
                {
                    "op": "v:get",
                    "args": [
                        "username",
                        "vault_user"
                    ]
                },
                {
                    "op": "s:out",
                    "args": [
                        "Hello {{user}}! Vault says hello to {{vault_user}}."
                    ]
                }
            ]
        }
    },
    "hooks": {
        "post:unlock": [
            {
                "op": "s:out",
                "args": [
                    "Vault successfully unlocked. Plugin system active."
                ]
            }
        ]
    }
}